@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel;

<h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100">Login</h1>

<form method="post" class="space-y-4 mt-4 max-w-md">
    <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

    <div>
        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
        <input name="email" required id="email" class="w-full rounded border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white p-2" placeholder="you@example.com" />
    </div>

    <div>
        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
        <input name="password" required id="password" type="password" class="w-full rounded border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-white p-2" placeholder="••••••••" />
    </div>

    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
        Login
    </button>
</form>

