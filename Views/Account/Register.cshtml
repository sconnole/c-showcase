@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-2xl font-bold mb-4">Create an Account</h1>

<form asp-action="Register" method="post" class="space-y-6 max-w-md mx-auto bg-white dark:bg-gray-800 p-6 rounded-xl shadow-md">
    <div asp-validation-summary="All" class="text-red-600 text-sm"></div>

    <div>
        <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Email</label>
        <input asp-for="Email" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Password" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Password</label>
        <input asp-for="Password" type="password" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-200">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Register
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
