@{
    ViewData["Title"] = "Register";
}
<h1 class="text-2xl font-bold">Register</h1>

<form method="post" class="space-y-4 mt-4">
    <input name="email" class="w-full border p-2" placeholder="Email" />
    <input name="password" type="password" class="w-full border p-2" placeholder="Password" />
    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded">Register</button>
</form>
