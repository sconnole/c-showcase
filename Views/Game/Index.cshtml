@model c_showcase.Models.Game.GameData;

@{
    ViewData["Title"] = "Orb Clicker";
}

<div class="min-h-screen bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100 p-4 transition-colors">
    <div class="grid grid-cols-[1fr_2fr_1fr] gap-4 max-w-7xl mx-auto">

        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-xl p-4 shadow space-y-4">
            <p>
                <span class="inline-block bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-300 text-sm font-semibold px-2 py-1 rounded-full">
                    <span id="orb-count">@Model.Resources</span>
                </span> 
                Orbs
            </p>
            <p class="text-s">
                <span class="inline-block bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-300 text-s font-semibold px-2 py-1 rounded-full">
                    @Model.ResourcesPerClick
                </span>
                Orbs per click
            </p>
            <p>
                <span class="inline-block bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-300 text-sm font-semibold px-2 py-1 rounded-full">
                    @Model.ResourcesPerSecond
                </span>
                Orbs per second
            </p>
        </div>

        <!-- CENTER: Orb Clicker -->
        <div class="flex flex-col items-center justify-center text-center space-y-6">
            <h1 class="text-3xl font-bold text-indigo-700 dark:text-indigo-300 mb-2">Orb Clicker</h1>
            @Html.Partial("./Partials/_OrbIcon")

            <p class="text-sm text-gray-600 dark:text-gray-400">
                Click the orb to gain more orbs!
            </p>
        </div>

        <!-- RIGHT: Upgrades -->
        <div class="bg-white dark:bg-gray-800 border dark:border-gray-700 rounded-xl p-4 shadow space-y-4">
            <h2 class="text-sm font-semibold text-gray-500 dark:text-gray-300 uppercase tracking-wide">Upgrades</h2>
            <ul class="space-y-2 text-sm">
                <li class="bg-indigo-50 dark:bg-indigo-900 border border-indigo-200 dark:border-indigo-700 p-2 rounded shadow">
                    üõ†Ô∏è Auto Orb Generator ‚Äî Coming Soon
                </li>
                <li class="bg-indigo-50 dark:bg-indigo-900 border border-indigo-200 dark:border-indigo-700 p-2 rounded shadow">
                    ‚ö° Orb Speed Boost ‚Äî Coming Soon
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let orbs = @Model.Resources;
        let pendingClicks = 0;

        document.getElementById("resource").addEventListener("click", () => {
            pendingClicks += @Model.ResourcesPerClick;
            orbs += @Model.ResourcesPerClick;
            document.getElementById("orb-count").innerText = orbs;
        });

        setInterval(() => {
            if (pendingClicks > 0) {
                fetch('/Game/Save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ clicks: pendingClicks })
                })
                .then(response => response.json())
                .then(data => {
                    orbs = data.resources;
                    pendingClicks = 0;
                    document.getElementById("orb-count").innerText = orbs;
                });
            }
        }, 5000);
    </script>
}
